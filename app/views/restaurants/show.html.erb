<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<div class="d-flex gap-2">
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: 'btn btn-warning' if policy(@restaurant).edit? %>
  <%= link_to "Back to restaurants", restaurants_path, class: 'btn btn-primary' %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete, class: 'btn btn-danger' if policy(@restaurant).destroy? %>
</div>
